<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="energymon" extends="struts-default">

        <action name="report" class="gent.cyber.energymon.actions.ReportAction" method="execute">
            <result name="success">WEB-INF/report.jsp</result>
        </action>
        <action name="auth" class="gent.cyber.energymon.actions.AuthenticationAction" method="execute">
            <result name="success">WEB-INF/login.jsp</result>
            <result name="accessDenied">WEB-INF/accessDenied.jsp</result>
        </action>
    </package>

</struts>